{
  "manifest_version": 2,

  "name": "Remove Citations",
  "description": "Remove the citations found on Wikipedia pages",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["main.js"]
    }
  ],
  "permissions": [
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
